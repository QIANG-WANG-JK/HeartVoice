<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="WhiteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!--去掉ActionBar 如果利用Toolbar需要去掉ActionBar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--AppBarLayout样式-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--toolbar样式-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--状态栏透明-->
    <style name="AppTheme.NoActionBar.StatusBarTransparent">

    </style>

    <!--侧滑界面Item容器-->
    <style name="ItemContainer">
        <!--可点击-->
        <item name="android:clickable">true</item>
        <!--左侧padding-->
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <!--右侧padding-->
        <item name="android:paddingRight">@dimen/dp_20</item>
        <!--内容垂直方向居中-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <!--内容方向为水平-->
        <item name="android:orientation">horizontal</item>
    </style>

    <!--侧滑界面Item-->
    <style name="ItemIcon">
        <!--左侧margin-->
        <item name="android:layout_width">@dimen/dp_30</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="ItemText">
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ItemNextIcon">
        <!--左侧margin-->
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_width">@dimen/dp_30</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
