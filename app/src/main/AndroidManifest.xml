<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hv.heartvoice">
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".View.activity.CommentActivity"
            android:label=""
            android:theme="@style/WhiteTheme"></activity>
        <activity
            android:name=".View.activity.SheetDetailActivity"
            android:label="" />
        <activity
            android:name=".View.activity.SettingActivity"
            android:label=""
            android:theme="@style/WhiteTheme" />
        <activity android:name=".View.activity.ServiceApproveActivity" />
        <activity android:name=".View.activity.ForgetPasswordActivity" /> <!-- 新版本默认不允许HTTP -->
        <activity android:name=".View.activity.RegisterActivity" />
        <activity android:name=".View.activity.LoginActivity" />
        <activity
            android:name=".View.activity.WebViewActivity"
            android:label=""
            android:theme="@style/WhiteTheme" />
        <activity
            android:name=".View.activity.MainActivity"
            android:label=""
            android:launchMode="singleTask"
            android:theme="@style/WhiteTheme" />
        <activity
            android:name=".View.activity.SplashActivity"
            android:theme="@style/WhiteTheme">

            <!-- 启动界面 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>